<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input"
        app:layout_constraintVertical_bias="0.97"
        tools:layout_editor_absoluteX="1dp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/clear"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/clear"
                android:background="@drawable/circle"
                android:textColor= "#FFFFFF"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="clearBtn"
                android:backgroundTint="#DD2C00" />

            <Button
                android:id="@+id/parenthesis"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/parentheses" 
                android:background="@drawable/circle"
                android:textColor= "#FFFFFF"
                android:textSize="24sp"
                android:onClick="parenthesesBtn"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/exponential"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/exponent" 
                android:background="@drawable/circle"
                android:textColor= "#FFFFFF"
                android:textSize="24sp"
                android:onClick="exponentialBtn"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/divide"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/divide" 
                android:background="@drawable/circle"
                android:textColor= "#FFFFFF"
                android:textSize="24sp"
                android:onClick="divideBtn"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/seven"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/seven" 
                android:background="@drawable/circle"
                android:textColor= "#FFFFFF"
                android:textSize="24sp"
                android:onClick="sevenBtn"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/eight"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/eight" 
                android:background="@drawable/circle"
                android:textColor= "#FFFFFF"
                android:textSize="24sp"
                android:onClick="eightBtn"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/nine"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/nine" 
                android:background="@drawable/circle"
                android:textColor= "#FFFFFF"
                android:textSize="24sp"
                android:onClick="nineBtn"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/multiply"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/multiply" 
                android:background="@drawable/circle"
                android:textColor= "#FFFFFF"
                android:textSize="24sp"
                android:onClick="multiplyBtn"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/four"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/four" 
                android:background="@drawable/circle"
                android:textColor= "#FFFFFF"
                android:textSize="24sp"
                android:onClick="fourBtn"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/five"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/five" 
                android:background="@drawable/circle"
                android:textColor= "#FFFFFF"
                android:textSize="24sp"
                android:onClick="fiveBtn"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/six"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/six" 
                android:background="@drawable/circle"
                android:textColor= "#FFFFFF"
                android:textSize="24sp"
                android:onClick="sixBtn"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/minus"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/subtract" 
                android:background="@drawable/circle"
                android:textColor= "#FFFFFF"
                android:textSize="24sp"
                android:onClick="minusBtn"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/one"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/one" 
                android:background="@drawable/circle"
                android:textColor= "#FFFFFF"
                android:textSize="24sp"
                android:onClick="oneBtn"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/two"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/two" 
                android:background="@drawable/circle"
                android:textColor= "#FFFFFF"
                android:onClick="twoBtn"
                android:textSize="24sp"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/three"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/three" 
                android:background="@drawable/circle"
                android:textColor= "#FFFFFF"
                android:textSize="24sp"
                android:onClick="threeBtn"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/add"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/add" 
                android:background="@drawable/circle"
                android:textColor= "#FFFFFF"
                android:textSize="24sp"
                android:onClick="addBtn"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/plusMinus"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/plusMinus" 
                android:background="@drawable/circle"
                android:textColor= "#FFFFFF"
                android:textSize="24sp"
                android:onClick="plusMinusBtn"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/cero"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="zeroBtn"
                android:text="@string/cero"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/point"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/point" 
                android:background="@drawable/circle"
                android:textColor= "#FFFFFF"
                android:textSize="24sp"
                android:onClick="pointBtn"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/equals"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/equals" 
                android:background="@drawable/circle"
                android:textColor= "#FFFFFF"
                android:layout_margin="5dp"
                android:onClick="equalsBtn"
                android:backgroundTint="#43A047" />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/display"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="false"
        android:textSize="36sp"
        android:inputType="none"
        android:textAlignment="textEnd"
        tools:ignore="LabelFor"
        android:layout_gravity="end" />

    <ImageButton
        android:id="@+id/button23"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        app:srcCompat="@drawable/backspace"
        android:layout_margin="5dp"
        android:onClick="BackspaceBtn"
        android:contentDescription="@string/backspace"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />
    app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>